{
  "name": "cyberpunk2020-homebrew",
  "version": "0.0.2",
  "description": "A Homebrew adapted system for FoundryVTT of R. Talsorian Games' classic Cyberpunk 2020 TTRPG.",
  "main": "system.json",
  "type": "module",
  "scripts": {
    "test": "jest --verbose",
    "test:coverage": "jest --coverage",
    "build:data": "node scripts/build-data.js",
    "build:css": "sass --source-map src/scss/cyberpunk2020.scss bin/cyberpunk2020-homebrew/css/cyberpunk2020.css",
    "build:css:release": "sass --no-source-map --style=compressed src/scss/cyberpunk2020.scss bin/cyberpunk2020-homebrew/css/cyberpunk2020.css",
    "build": "run-s clean copy build:data build:css:release",
    "clean": "rimraf bin/cyberpunk2020-homebrew",
    "copy": "cd src && cpy ** !scss !data ../bin/cyberpunk2020-homebrew && cd -",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gibbitz/cyberpunk2020-fvtt-homebrew.git"
  },
  "keywords": [
    "FVTT",
    "Cyberpunk2020",
    "system"
  ],
  "author": "gibbitzStudios",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gibbitz/cyberpunk2020-fvtt-homebrew/issues"
  },
  "homepage": "https://github.com/gibbitz/cyberpunk2020-fvtt-homebrew#readme",
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/plugin-transform-modules-commonjs": "^7.23.0",
    "babel-jest": "^29.7.0",
    "@babel/preset-env": "^7.23.2",
    "cpy-cli": "^5.0.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.4"
  },
  "watch": {
    "copy": {
      "patterns": "src/**",
      "ignore": ["src/scss/**", "src/data/**"],
      "extensions": "*"
    },
    "build:data": {
      "patterns": "./src/data/**.*",
      "extensions": "*"
    },
    "build:css": {
      "patterns": [
        "./src/scss/**"
      ],
      "extensions": "scss"
    }
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(test).(c)js"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!node-fetch)"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "plugins": ["@babel/plugin-transform-modules-commonjs"]
      }
    },
    "presets": [
      "@babel/preset-env"
    ]
  }
}
